{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2021",

    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    "strict": true,
    "strictPropertyInitialization": false,
    "types": ["node"],
    
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,

    "sourceMap": true,
    "incremental": true,
    "skipLibCheck": true,

    "baseUrl": ".",
    "paths": {
      "@common/*": ["common/*"],
      "@core/*": ["core/*"],
      "@config/*": ["config/*"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
